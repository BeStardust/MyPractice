<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#988888"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/helloSecond"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:gravity="bottom"
            android:paddingEnd="10dp"
            android:paddingBottom="3dp"
            android:text="@string/LoginSuccess"
            android:textColor="#FAF3F3"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:textColor="#B8D2EA"
            android:textSize="34sp"
            android:textStyle="bold|italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end">

            <ImageButton
                android:id="@+id/PersonalInformationEdit"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="#00FFFFFF"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:src="@android:drawable/ic_menu_sort_by_size" />

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/mainPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <!--        <LinearLayout-->
        <!--            android:id="@+id/listLayout"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_weight="1"-->
        <!--            android:background="#E2FAF2"-->
        <!--            android:orientation="vertical"-->
        <!--            android:paddingTop="15dp">-->


        <!--        </LinearLayout>-->

        <ListView
            android:id="@+id/SongList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="20dp" />

        <LinearLayout
            android:id="@+id/controlLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFDDDD"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/Is_Playing"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:background="#ECE7E7"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:text="@string/isPlaying"
                android:textColor="#DA8080"
                android:textSize="20sp"
                android:textStyle="italic" />

            <ImageButton
                android:id="@+id/Pre_Song_Btn"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:backgroundTint="#00FFFFFF"
                android:src="@android:drawable/ic_media_previous" />

            <ImageButton
                android:id="@+id/PlayMusic"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:backgroundTint="#C15977"
                android:src="@android:drawable/ic_media_play" />

            <ImageButton
                android:id="@+id/Next_Song_Btn"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:backgroundTint="#00FFFFFF"
                android:src="@android:drawable/ic_media_next" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#65DFEA"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/playPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:src="@drawable/music_light" />

        <ImageButton
            android:id="@+id/personPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:src="@drawable/collection_dark" />

    </LinearLayout>

</LinearLayout>